<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="standardFont" parent="@android:style/TextAppearance.Small">

        <!-- <item name="android:textColor">black</item> -->
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="standardLayout" parent="@style/standardFont"></style>

    <style name="totalLabel" parent="@style/standardLayout">

        <!-- <item name="android:text">£0.00</item> -->
        <item name="android:gravity">center</item>
    </style>

    <style name="rightAlignLabel" parent="@style/standardLayout">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    
    <style name="leftAlignLabel" parent="@style/standardLayout">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="centerAlignLabel" parent="@style/standardLayout">
        <item name="android:gravity">center</item>
    </style>

    <style name="listViewItemLabel" parent="@style/standardLayout">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="inputValue" parent="@style/standardLayout">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:text">0.00</item>
        <!-- <item name="android:digits">0123456789.,£%</item> -->
        <item name="android:inputType">numberDecimal</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="currencyInput" parent="@style/inputValue">
        <!-- <item name="android:text">£0.00</item> -->
    </style>

    <style name="percentageInput" parent="@style/inputValue">
        <!-- <item name="android:text">0.00%</item> -->
    </style>

    <style name="linearLayoutRow">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="horizontalRule">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>