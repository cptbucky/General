<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="standardFont" parent="@style/AppTheme">
		<item name="android:typeface">sans</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="standardLayout" parent="@style/standardFont"></style>

	<style name="totalLabel" parent="@style/standardLayout">
		<item name="android:gravity">center</item>
	</style>

	<style name="rightAlignLabel" parent="@style/standardLayout">
		<item name="android:gravity">right</item>
	</style>

	<style name="leftAlignLabel" parent="@style/standardLayout">
		<item name="android:gravity">left</item>
	</style>

	<style name="centerAlignLabel" parent="@style/standardLayout">
		<item name="android:gravity">center</item>
	</style>

	<style name="sectionHeaderLabel" parent="@style/standardLayout">
		<item name="android:gravity">left</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="highlightedSavingLabel" parent="@style/standardLayout">
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">50sp</item>
	</style>

	<style name="listViewItemLabel" parent="@style/standardLayout">
		<item name="android:gravity">left</item>
		<item name="android:layout_marginLeft">5sp</item>
		<item name="android:textSize">22sp</item>
	</style>

	<style name="inputValue" parent="@style/standardLayout">
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:text">0.00</item>
		<item name="android:inputType">numberDecimal</item>
		<item name="android:selectAllOnFocus">true</item>
	</style>

	<style name="currencyInput" parent="@style/inputValue">
	</style>

	<style name="percentageInput" parent="@style/inputValue">
	</style>

	<style name="linearLayoutRow">
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_marginTop">20dp</item>
	</style>

	<style name="ruleSeparator">
		<item name="android:background">@android:color/darker_gray</item>
	</style>

	<style name="horizontalRule" parent="ruleSeparator">
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:layout_marginRight">0dp</item>
		<item name="android:layout_marginLeft">0dp</item>
	</style>

	<style name="verticalRule" parent="ruleSeparator">
		<item name="android:layout_marginBottom">0dp</item>
		<item name="android:layout_marginRight">20dp</item>
		<item name="android:layout_marginTop">0dp</item>
	</style>

</resources>