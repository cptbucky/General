<resources>

	<!--
		Base application theme, dependent on API level. This theme is replaced
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.DeviceDefault.Light">
		<!--
			Theme customizations available in newer API levels can go in
			res/values-vXX/styles.xml, while customizations related to
			backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
		<item name="android:typeface">sans</item>
		<item name="android:textSize">14sp</item>
	</style>

	<!--<style name="standardFont" parent="@style/AppTheme">-->
	<!--<item name="android:typeface">sans</item>-->
	<!--<item name="android:textSize">14sp</item>-->
	<!--</style>-->

	<style name="standardLayout" parent="AppTheme"></style>

	<style name="totalLabel" parent="@style/standardLayout">
		<item name="android:gravity">center</item>
	</style>

	<style name="rightAlignLabel" parent="@style/standardLayout">
		<item name="android:gravity">right</item>
	</style>

	<style name="leftAlignLabel" parent="@style/standardLayout">
		<item name="android:gravity">left</item>
	</style>

	<style name="centerAlignLabel" parent="@style/standardLayout">
		<item name="android:gravity">center</item>
	</style>

	<style name="sectionHeaderLabel" parent="@style/standardLayout">
		<item name="android:gravity">left</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="highlightedSavingLabel" parent="@style/standardLayout">
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">50sp</item>
	</style>

	<style name="listViewItemLabel" parent="@style/standardLayout">
		<item name="android:gravity">left</item>
		<item name="android:layout_marginLeft">5sp</item>
		<item name="android:textSize">22sp</item>
	</style>

	<style name="inputValue" parent="@style/standardLayout">
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:text">0.00</item>
		<item name="android:inputType">numberDecimal</item>
		<item name="android:selectAllOnFocus">true</item>
	</style>

	<style name="currencyInput" parent="@style/inputValue">
	</style>

	<style name="percentageInput" parent="@style/inputValue">
	</style>

	<style name="linearLayoutRow">
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_marginTop">20dp</item>
	</style>

	<style name="ruleSeparator">
		<item name="android:background">@android:color/darker_gray</item>
	</style>

	<style name="horizontalRule" parent="ruleSeparator">
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:layout_marginRight">0dp</item>
		<item name="android:layout_marginLeft">0dp</item>
	</style>

	<style name="verticalRule" parent="ruleSeparator">
		<item name="android:layout_marginBottom">0dp</item>
		<item name="android:layout_marginRight">20dp</item>
		<item name="android:layout_marginTop">0dp</item>
	</style>

</resources>